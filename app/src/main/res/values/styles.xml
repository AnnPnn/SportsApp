<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBar.Solid.BottomNavigationView" parent="@style/Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:tint">@color/transparent</item>
    </style>

    <style name="Button.Style" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textSize">30sp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/blue60</item>
        <item name="android:padding">1dp</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="Spinner.Style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>
</resources>